<main class="contenedor">
    <form action="/vacantes/editar/{{vacante.url}}" method="POST" class="default-form">
        <h3>Informacion General</h3>

        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="titulo" placeholder="Ej: Fiesta Club House" value="{{vacante.titulo}}">
        </div>
        <div class="campo">
            <label>Empresa</label>
            <input type="text" name="empresa" placeholder="Ej: Productora Red-Label" value="{{vacante.empresa}}">
        </div>
        <div class="campo">
            <label>Ubicacion</label>
            <input type="text" name="ubicacion" placeholder="Ej: Region Metropolitana" value="{{vacante.ubicacion}}">
        </div>
        <div class="campo">
            <label>Honorarios</label>
            <input type="text" name="salario" placeholder="Ej: $100.000" value="{{vacante.salario}}">
        </div>
        <div class="campo">
            <label>Contrato</label>
            <select name="contrato">
                {{#tipoContrato vacante.contrato}}
                    <option value="" disabled selected>-- Selecciona --</option>
                    <option value="extended">Extended-5Hrs</option>
                    <option value="showcase">Showcase-1Hrs</option>
                    <option value="partial">Showcase-2Hrs</option>
                    <option value="fulltime">Full Time</option>
                {{/tipoContrato}}
            </select>   
        </div>
        <h3>Descripcion de la Vacante</h3>
        <div class="campo descripcion">
            <label>Descripcion</label>
            <input type="hidden" id="x" name="descripcion" value="{{vacante.descripcion}}">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Skills</h3>

        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>
    </form>
</main>

